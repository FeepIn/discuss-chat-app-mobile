<?xml version="1.0" encoding="utf-8"?>
<fr.feepin.justchat.GridViewRoomItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/belgium"
    >

    <ImageView
        android:padding="60dp"
        android:src="@drawable/plus"
        android:id="@+id/imgPlus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/create_icon"
         />

    <TextView
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:text="@string/create_room"
        android:fontFamily="@font/chelsea"
        />



</fr.feepin.justchat.GridViewRoomItem>